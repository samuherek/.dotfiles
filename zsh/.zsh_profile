# helper to quickly source zsh changes in the shell
function so() {
    source ~/.zsh_profile
}

# copy absolute path to a file into clipboard
function pwdc() {
    local val="$1"     
    if [ -z "$val" ]; then
        echo "No file or directory specified."
        return 0
    fi

    if [ -e "$val" ]; then
        local value="$(pwd)/$val"
        echo "copied $value"
        echo "$value" | pbcopy
    else 
        echo "File or directory does not exist."
        return 0
    fi
}

# quick dir launcher 
function f() {
    local selected=$(bash quick_dir)
    if [[ -n $selected ]]; then
        cd "$selected"
    fi
}

# bind guick dir to ctrl+f
bindkey -s ^f "f\n"
